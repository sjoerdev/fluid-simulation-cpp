{
    "version": 3,

    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 19,
        "patch": 0
    },

    "configurePresets": [
        {
            "name": "msvc-default",
            "binaryDir": "${sourceDir}/build/${presetName}"
        },
        {
            "name": "msvc-ninja",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "generator": "Ninja"
        }
    ],

    "buildPresets": [
        {
            "name": "msvc-default-debug",
            "configurePreset": "msvc-default",
            "configuration": "Debug",
            "jobs": 0
        },
        {
            "name": "msvc-default-release",
            "configurePreset": "msvc-default",
            "configuration": "Release",
            "jobs": 0
        },
        {
            "name": "msvc-ninja-debug",
            "configurePreset": "msvc-ninja",
            "configuration": "Debug",
            "jobs": 0
        },
        {
            "name": "msvc-ninja-release",
            "configurePreset": "msvc-ninja",
            "configuration": "Release",
            "jobs": 0
        }
    ]
}